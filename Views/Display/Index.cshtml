@{
  Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Process</title>
  <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
  <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
  <link rel="stylesheet" href="~/LineMonitoring.styles.css" asp-append-version="true" />
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">
</head>

<body>
  <div class="row px-4 mt-5">
    <div class="col-4">
      <div class="card" style="height: 600px; max-height: 600px;">
        <div class="card-header">
          <div class="d-flex flex-row justify-content-between align-items-center">
            <h4>@ViewBag.Employee.ProcessName</h4>
            <div id="btn-search">
              <i class="bi bi-search" style="font-size: 24px;"></i>
            </div>
          </div>
        </div>
        <div class="card-body">
          <div class="w-100 text-center">
            <img src="~/img/@ViewBag.Employee.ImageUrl" alt="Employee Profile" style="width: 80%; max-height: 300px;" />
          </div>
          <div class="card mt-3">
            <div class="card-header">
              <h4><strong>@ViewBag.Employee.Name</strong></h4>
            </div>
            <div class="card-body">
              <h5><strong>Batch Id: @ViewBag.Employee.BatchId</strong></h5>
              <hr>
              <h5><strong>Product Id: @ViewBag.Employee.ProductId</strong></h5>
            </div>
          </div>
        </div>
      </div>
      <div id="req-form" class="mt-3" hidden>

        <select class="form-select" id="id" name="id" required>
          <option value="" selected>Select employee name</option>
          @foreach (var item in ViewBag.EmpList)
          {
            <option value="@item.ProcessName">@item.Name</option>
          }
        </select>
        @* <button id="btn-reload" class="btn btn-small btn-primary mt-3">Submit</button> *@
      </div>
    </div>
  </div>

  <script src="~/lib/jquery/dist/jquery.min.js"></script>
  <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
  <script src="~/lib/axios/axios.min.js"></script>
  <script src="~/lib/sweetalert2/sweetalert2.all.min.js"></script>
  <script src="~/js/helpers/http.js" asp-append-version="true"></script>
  <script src="~/js/helpers/alert.js" asp-append-version="true"></script>
  <script src="~/js/display/index.js" asp-append-version="true"></script>
</body>

</html>
